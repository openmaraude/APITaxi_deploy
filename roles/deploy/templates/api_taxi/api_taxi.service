[Unit]
Description={{ project }}
Requires=docker.service
After=docker.service

[Service]
Restart=always

EnvironmentFile=/opt/openmaraude/{{ project }}/{{ project }}.env
ExecStartPre=/usr/bin/docker pull "$DOCKER_IMAGE"
ExecStartPre=-/usr/bin/docker rm -f {{ project }}
ExecStart=/usr/bin/docker run --rm \
                --name {{ project }} \
                --network prod \
                -p {{ host_port }}:5000 \
                -p {{ host_port_stats }}:5007 \
                --env-file=/opt/openmaraude/{{ project }}/{{ project }}.env \
                -v /opt/openmaraude/{{ project }}/uwsgi.ini:/uwsgi.ini:ro \
                -v /opt/openmaraude/{{ project }}/settings.py:/settings.py:ro \
                -v /var/lib/api_taxi/uploads:/uploads \
                -e 'APITAXI_CONFIG_FILE=/settings.py' \
                "$DOCKER_IMAGE"

ExecStop=/usr/bin/docker stop {{ project }}

[Install]
WantedBy=multi-user.target
